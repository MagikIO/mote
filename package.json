{
  "name": "@magik_io/mote",
  "version": "1.6.8",
  "description": "A lightweight, TypeScript-first DOM manipulation library with a jQuery-like API for modern web applications. Small, self-contained, and reusable pieces of code that can be composed to build larger applications.",
  "keywords": [
    "dom",
    "dom-manipulation",
    "typescript",
    "jquery-like",
    "fluent-api",
    "chainable",
    "lightweight",
    "browser",
    "web",
    "element",
    "selector",
    "events",
    "type-safe",
    "modern",
    "esm",
    "commonjs"
  ],
  "engines": {
    "node": ">=25"
  },
  "scripts": {
    "dev": "vite",
    "build": "unbuild",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "test": "vitest run --coverage --config ./vitest.config.js",
    "iterate": "pnpm version patch && pnpm publish --access public --no-git-checks && git push --follow-tags"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./Mote": {
      "types": "./dist/Mote.d.ts",
      "import": "./dist/Mote.mjs",
      "require": "./dist/Mote.cjs"
    },
    "./All": {
      "types": "./dist/All.d.ts",
      "import": "./dist/All.mjs",
      "require": "./dist/All.cjs"
    },
    "./El": {
      "import": "./dist/El.mjs",
      "require": "./dist/El.cjs",
      "types": "./dist/El.d.ts"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@magik_io/lint_golem": "^3.6.0",
    "@vitest/coverage-v8": "^4.0.10",
    "eslint": "^9.39.1",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.10"
  },
  "authors": [
    {
      "name": "Antonio B.",
      "email": "Abourassa@AssetVal.com",
      "github": "https://github.com/Abourass"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MagikIO/mote.git"
  },
  "browserslist": [
    "last 2 version",
    "> 1%"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.22.0"
}
